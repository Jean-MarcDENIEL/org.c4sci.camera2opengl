<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D59E11"
    tools:context="org.c4sci.camera2opengl.ui.MainActivity">

    <TextureView
        android:id="@+id/inputTextureView"
        android:layout_width="721dp"
        android:layout_height="317dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textViewSearching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/focusing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outputSurfaceViewLeft"
        app:layout_constraintVertical_bias="1.0" />

    <SurfaceView
        android:id="@+id/outputSurfaceViewLeft"
        android:layout_width="48dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputTextureView"
        app:layout_constraintVertical_bias="0.0" />

    <SurfaceView
        android:id="@+id/outputSurfaceViewRight"
        android:layout_width="42dp"
        android:layout_height="88dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/outputSurfaceViewLeft"
        app:layout_constraintStart_toEndOf="@+id/outputSurfaceViewLeft"
        app:layout_constraintTop_toTopOf="@+id/outputSurfaceViewLeft"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
